@using HotelManagement.Models.Common
@model HotelManagement.Services.Dto.BookingResponseModel

@{
    ViewData["Title"] = "Booking Details";
    var totalServices = Model.BookingServices?.Sum(s => s.ServicePrice * s.Quantity) ?? 0;
    var totalInvoices = 0;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Booking Details</h2>
                    <p class="text-muted mb-0">Booking ID: <code>@Model.Id</code></p>
                </div>
            </div>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Booking Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Check-In Date</label>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-check text-success me-2 fs-4"></i>
                                <div>
                                    <strong class="d-block">@Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")</strong>
                                    <small class="text-muted">@Model.CheckInDate.ToString("hh:mm tt")</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Check-Out Date</label>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-x text-danger me-2 fs-4"></i>
                                <div>
                                    <strong class="d-block">@Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")</strong>
                                    <small class="text-muted">@Model.CheckOutDate.ToString("hh:mm tt")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="text-muted small">Number of Nights</label>
                            <div>
                                <span class="badge bg-info fs-6">@((Model.CheckOutDate - Model.CheckInDate).Days) nights</span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="text-muted small">Booking Status</label>
                            <div>
                                @switch (Model.Status.ToString())
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark fs-6">Pending</span>
                                        break;
                                    case "Confirmed":
                                        <span class="badge bg-success fs-6">Confirmed</span>
                                        break;
                                    case "CheckedIn":
                                        <span class="badge bg-primary fs-6">Checked In</span>
                                        break;
                                    case "CheckedOut":
                                        <span class="badge bg-secondary fs-6">Checked Out</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-danger fs-6">Cancelled</span>
                                        break;
                                    default:
                                        <span class="badge bg-light text-dark fs-6">@Model.Status</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="text-muted small">Created At</label>
                            <div>
                                <strong class="d-block">@Model.CreatedAt.ToString("MMM dd, yyyy")</strong>
                                <small class="text-muted">@Model.CreatedAt.ToString("hh:mm tt")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            @if (Model.Customer != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>Customer Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Full Name</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-badge text-primary me-2"></i>
                                    <strong>@Model.Customer.FullName</strong>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Email Address</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope text-primary me-2"></i>
                                    <a href="mailto:@Model.Customer.Email">@Model.Customer.Email</a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Phone Number</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-telephone text-primary me-2"></i>
                                    <a href="tel:@Model.Customer.Phone">@Model.Customer.Phone</a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Customer ID</label>
                                <div>
                                    <code class="small">@Model.CustomerId</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.Room != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-door-open me-2"></i>Room Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="text-muted small">Room Number</label>
                                <div>
                                    <h4 class="mb-0 text-success">@Model.Room.RoomNumber</h4>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="text-muted small">Room Type</label>
                                <div>
                                    <strong>@Model.Room.RoomTypeName</strong>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="text-muted small">Floor</label>
                                <div>
                                    <span class="badge bg-secondary">Floor @Model.Room.FloorName</span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Price Per Night</label>
                                <div>
                                    <strong class="text-success fs-5">$@Model.Room.BasePrice.ToString("N2")</strong>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Capacity</label>
                                <div>
                                    <i class="bi bi-people text-primary me-1"></i>
                                    <strong>@Model.Room.Capacity persons</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.BookingServices.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="bi bi-cart-check me-2"></i>Additional Services</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Service Name</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th class="text-end">Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model.BookingServices)
                                    {
                                        <tr>
                                            <td><strong>@service.ServiceName</strong></td>
                                            <td>@service.Quantity</td>
                                            <td>$@service.ServicePrice.ToString("N2")</td>
                                            <td class="text-end"><strong class="text-success">$@service.ServicePrice.ToString("N2")</strong></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3" class="text-end">Total Services:</th>
                                        <th class="text-end"><strong class="text-success">$@totalServices.ToString("N2")</strong></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.Invoices.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Invoices</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Invoice Number</th>
                                        <th>Issue Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoice in Model.Invoices)
                                    {
                                        <tr>
                                            <td><strong>@invoice.Id</strong></td>
                                            <td>@invoice.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td><strong class="text-success">$@invoice.Total.ToString("N2")</strong></td>
                                            <td>
                                                @if (invoice.PaymentStatus == PaymentStatus.Paid)
                                                {
                                                    <span class="badge bg-success">Paid</span>
                                                }
                                                else if (invoice.PaymentStatus == PaymentStatus.Pending)
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Overdue</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Invoice", new { id = invoice.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-lg-4">
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Financial Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Room Charges:</span>
                            <strong>$@((Model.TotalAmount).ToString("N2"))</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Additional Services:</span>
                            <strong>$@totalServices.ToString("N2")</strong>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Total Amount:</h5>
                        <h4 class="mb-0 text-success">$@((Model.TotalAmount + totalServices).ToString("N2"))</h4>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status.ToString() == "Confirmed")
                        {
                            <form method="post" asp-action="CheckInBooking" asp-route-id="@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Check In
                                </button>
                            </form>
                        }
                        @if (Model.Status.ToString() == "CheckedIn")
                        {
                            <form method="post" asp-action="CheckoutBooking" asp-route-id="@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-box-arrow-right me-2"></i>Check Out
                                </button>
                            </form>
                        }
                        @if (Model.Status.ToString() == "Pending")
                        {
                            <form method="post" asp-action="ConfirmBooking" asp-route-id="@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle me-2"></i>Confirm Booking
                                </button>
                            </form>
                        }
                        @if (Model.Status.ToString() != "Canceled" && Model.Status.ToString() != "CheckedOut")
                        {
                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                <i class="bi bi-x-circle me-2"></i>Cancel Booking
                            </button>
                        }
                        <a sp-controller="InvoiceWeb"
                           asp-action="CreateInvoice"
                           asp-route-bookingId="@Model.Id" class="btn btn-outline-primary w-100">
                            <i class="bi bi-file-earmark-plus me-2"></i>Create Invoice
                        </a>
                        <a href="@Url.Action("AddBookingService", "ServiceWeb", new { bookingId = Model.Id })"
                           class="btn btn-outline-secondary w-100">
                            <i class="bi bi-plus-circle me-2"></i>Add Service
                        </a>
                        <button onclick="window.print()" class="btn btn-outline-info w-100">
                            <i class="bi bi-printer me-2"></i>Print Details
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Activity Timeline</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</small>
                                <p class="mb-0">Booking created</p>
                            </div>
                        </div>
                        @if (Model.Status.ToString() != "Pending")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <small class="text-muted">Status updated</small>
                                    <p class="mb-0">Booking @Model.Status.ToString().ToLower()</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this booking?</p>
                <p class="text-danger"><strong>Warning:</strong> This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="DeleteBooking" asp-route-id="@Model.Id" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this booking?</p>
                <div class="mb-3">
                    <label class="form-label">Cancellation Reason (Optional)</label>
                    <textarea class="form-control" rows="3" name="reason"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form method="post" asp-action="CancelBooking" asp-route-id="@Model.Id" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline::before {
        content: '';
        position: absolute;
        left: 8px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #dee2e6;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }
    
    .timeline-marker {
        position: absolute;
        left: -26px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }
    
    .timeline-content {
        padding-left: 10px;
    }
    
    @@media print {
        .btn, .card-header, .modal {
            display: none !important;
        }
    }
</style>

@section Scripts {
    <script>
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}