@model HotelManagement.Services.Dto.BookingServiceResponseModel

@{
    ViewData["Title"] = "Booking Service Details";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Booking Service Details</h2>
                    <p class="text-muted mb-0">Service ID: <code>@Model.Id</code></p>
                </div>
            </div>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ValidationErrors"] != null)
    {
        var errors = System.Text.Json.JsonSerializer.Deserialize<List<string>>(TempData["ValidationErrors"].ToString());
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Validation Errors:</strong>
            <ul class="mb-0 mt-2">
                @foreach (var error in errors)
                {
                    <li>@error</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Service Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <label class="text-muted small">Service Name</label>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-tag text-primary me-2 fs-4"></i>
                                <div>
                                    <h5 class="mb-0">@Model.ServiceName</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="text-muted small">Quantity</label>
                            <div>
                                <span class="badge bg-info fs-5">@Model.Quantity</span>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="text-muted small">Unit Price</label>
                            <div>
                                <strong class="text-success fs-5">$@Model.ServicePrice.ToString("N2")</strong>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="text-muted small">Total Amount</label>
                            <div>
                                <strong class="text-primary fs-4">$@(Model.ServicePrice * Model.Quantity)</strong>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="text-muted small">Created At</label>
                            <div>
                                <strong class="d-block">@Model.CreatedAt.ToString("MMM dd, yyyy")</strong>
                                <small class="text-muted">@Model.CreatedAt.ToString("hh:mm tt")</small>
                            </div>
                        </div>
                    </div>

               
                    <div class="card bg-light mt-3">
                        <div class="card-body">
                            <h6 class="card-title mb-3"><i class="bi bi-calculator me-2"></i>Calculation Breakdown</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Unit Price:</span>
                                <strong>$@Model.ServicePrice.ToString("N2")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Quantity:</span>
                                <strong>Ã— @Model.Quantity</strong>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <strong>Total Amount:</strong>
                                <h5 class="mb-0 text-primary">$@(Model.ServicePrice * Model.Quantity)</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Activity Log</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</small>
                                <p class="mb-1"><strong>Service Added</strong></p>
                                <p class="mb-0 text-muted small">@Model.ServiceName was added to booking @Model.BookingReference</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Service Price:</span>
                            <h5 class="mb-0 text-success">$@Model.ServicePrice.ToString("N2")</h5>
                        </div>
                    </div>
                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Quantity:</span>
                            <h5 class="mb-0 text-info">@Model.Quantity</h5>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Total Amount:</span>
                            <h4 class="mb-0 text-primary">$@(Model.ServicePrice * Model.Quantity)</h4>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button data-bs-toggle="modal" data-bs-target="#editModal" 
                           class="btn btn-warning">
                            <i class="bi bi-pencil me-2"></i>Edit Service
                        </button>
                        <button type="button" 
                                class="btn btn-danger" 
                                data-bs-toggle="modal" 
                                data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i>Delete Service
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-key me-2"></i>Reference IDs</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Service ID</label>
                        <div>
                            <code class="small">@Model.Id</code>
                            <button class="btn btn-sm btn-outline-secondary ms-2" 
                                    onclick="copyToClipboard('@Model.Id')">
                                <i class="fa fa-clipboard"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Booking ID</label>
                        <div>
                            <code class="small">@Model.BookingId</code>
                            <button class="btn btn-sm btn-outline-secondary ms-2" 
                                    onclick="copyToClipboard('@Model.BookingId')">
                                <i class="fa fa-clipboard"></i>
                            </button>
                        </div>
                    </div>
                    <div>
                        <label class="text-muted small">Service Master ID</label>
                        <div>
                            <code class="small">@Model.ServiceId</code>
                            <button class="btn btn-sm btn-outline-secondary ms-2" 
                                    onclick="copyToClipboard('@Model.ServiceId')">
                                <i class="fa fa-clipboard"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this booking service?</p>
                <div class="alert alert-warning">
                    <strong>Service:</strong> @Model.ServiceName<br>
                    <strong>Amount:</strong> $@Model.TotalAmount.ToString("N2")
                </div>
                <p class="text-danger"><strong>Warning:</strong> This action cannot be undone and will affect the booking total.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="DeleteBookingService" asp-route-id="@Model.Id" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Service</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="EditBookingService" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="editModalLabel">
                        <i class="fas fa-edit"></i> Edit Booking Service
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Quantity <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" name="Quantity" class="form-control" value="@Model.Quantity" step="1" min="1" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline::before {
        content: '';
        position: absolute;
        left: 8px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #dee2e6;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }
    
    .timeline-marker {
        position: absolute;
        left: -26px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }
    
    .timeline-content {
        padding-left: 10px;
    }

    code {
        background-color: #f8f9fa;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
    }
    
    @@media print {
        .btn, .card-header, .modal {
            display: none !important;
        }
    }
</style>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('ID copied to clipboard!');
            }, function(err) {
                console.error('Could not copy text: ', err);
            });
        }
    </script>
}